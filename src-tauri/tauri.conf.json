{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Humble Vault Downloader",
  "version": "0.0.4",
  "identifier": "com.konsumer.humblevaultdownloader",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Utility",
    "shortDescription": "Download your Humble Bundle vault games",
    "longDescription": "A desktop application to browse and download games from your Humble Bundle vault library."
  }
}
