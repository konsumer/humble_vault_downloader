[Desktop Entry]
Version=1.0
Type=Application
Name=Humble Vault Downloader
Comment=Download games from your Humble Bundle vault
Exec=bash -c 'INSTALL_DIR="$HOME/.local/share/humble-vault-downloader"; mkdir -p "$INSTALL_DIR"; cd "$INSTALL_DIR"; if [ ! -f "humble-vault-downloader.AppImage" ]; then kdialog --passivepopup "Downloading Humble Vault Downloader..." 3 2>/dev/null &  LATEST_URL=$(curl -sL https://api.github.com/repos/konsumer/humble_vault_downloader/releases/latest | grep -o "https://github.com/konsumer/humble_vault_downloader/releases/download/[^\"]*amd64.AppImage" | head -n1); if [ -z "$LATEST_URL" ]; then kdialog --error "Could not find download. Please visit:\nhttps://github.com/konsumer/humble_vault_downloader/releases" 2>/dev/null || zenity --error --text="Could not find download. Please visit:\nhttps://github.com/konsumer/humble_vault_downloader/releases" 2>/dev/null; exit 1; fi; curl -L -o humble-vault-downloader.AppImage "$LATEST_URL" && chmod +x humble-vault-downloader.AppImage || { kdialog --error "Download failed. Please check your internet connection." 2>/dev/null || zenity --error --text="Download failed. Please check your internet connection." 2>/dev/null; exit 1; }; fi; exec ./humble-vault-downloader.AppImage'
Icon=application-x-executable
Terminal=false
Categories=Game;Utility;
Keywords=humble;bundle;download;games;
X-AppImage-Name=Humble Vault Downloader
